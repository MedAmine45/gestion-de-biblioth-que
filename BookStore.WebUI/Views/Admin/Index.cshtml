@model IEnumerable<BookStore.Domain.Entities.Book>

@{
    ViewBag.Title = "Admin: All Books";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Administration Page</h2>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Books</h3>
    </div>
    <div class="panel-body">
        <table class="table table-condensed table-striped table-bordered">
            <tr>
                <th class="text-left">
                    ID
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    Category
                </th>
                <th>Actions</th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.BookId)
                </td>
                <td class="text-center">
                    @*@Html.DisplayFor(modelItem => item.Title)*@
                    @Html.ActionLink(item.Title,"Edit",new { item.BookId })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="text-center">
                    @*@Html.DisplayFor(modelItem => item.Price)*@
                    @item.Price.ToString("c")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialization)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.BookId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.BookId }) |*@
                    @Html.ActionLink("Delete", "Delete", new {item.BookId },new { @class ="btn btn-danger btn-xs" })
                </td>
            </tr>
            }

        </table>

    </div>

    <div class="panel-footer">
        @Html.ActionLink("Add New Book", "Create",null,new { @class="btn btn-default" })
    </div>
</div>  
